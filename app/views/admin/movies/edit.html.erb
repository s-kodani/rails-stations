<%= render 'admin/header' %>
<%= render 'admin/side-nav' %>
<div class="admin-main">
  <h2 class="admin-main__title">映画を編集</h2>
  <div class="admin-main__alert">
    <% if flash[:success] %>
      <p class="alert alert-success"><%= flash[:success] %></p>
    <% elsif flash[:danger] %>
      <p class="alert alert-danger"><%= flash[:danger] %></p>
    <% end %>
    <ul>
      <% @movie.errors.each do |error| %>
        <li><%= error.message %></li>
      <% end %>
    </ul>
  </div>

  <div class="admin-main__form-container">
    <%= render "form", movie: @movie %>
  </div>

  <div>
    <button class="admin-main__button-container admin-main__button--info">
      <%= link_to "スケジュール追加", new_admin_movie_schedule_path(@movie), class: "admin-main__button" %>
    </button>
  </div>

  <div>
    <button class="admin-main__button-container admin-main__button--error">
      <%= link_to "削除", admin_movie_path(@movie), method: :delete, data: {
        confirm: "削除しても良いですか？"
      }, class: "admin-main__button" %>
    </button>
  </div>
</div>